<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:debuggable = "true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brenos.movies.MainActivity"
    android:background="#1c1717">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filme1x1"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/deadpool"
            android:background="#8673dd" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filme1x2"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/aorigem"
            android:background="#858bfb" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filme2x1"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/suicide_squad_poster"
            android:background="#8aa9f6" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filme2x2"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="#90aff4"
            android:src="@drawable/fightclub" />
    </LinearLayout>

</LinearLayout>
